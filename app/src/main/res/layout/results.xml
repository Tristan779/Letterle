<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corners"
    android:textColor="#FFFAFA">


    <TextView
        android:id="@+id/textViewPlayed_nr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewWin_nr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount" />

    <TextView
        android:id="@+id/textViewWin_nr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewCurrentStreak_nr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewPlayed_nr"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount" />

    <TextView
        android:id="@+id/textViewMaxStreak_nr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewCurrentStreak_nr"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount" />

    <TextView
        android:id="@+id/textViewCurrentStreak_nr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewMaxStreak_nr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewWin_nr"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount" />

    <TextView
        android:id="@+id/textViewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="STATISTICS"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWon"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Win %"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/textViewCurrentStreak"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_played"
        app:layout_constraintTop_toBottomOf="@+id/textViewWin_nr" />

    <TextView
        android:id="@+id/textViewMaxStreak"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Max Streak"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewCurrentStreak"
        app:layout_constraintTop_toBottomOf="@+id/textViewMaxStreak_nr" />

    <TextView
        android:id="@+id/textViewCurrentStreak"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Current Streak"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/textViewMaxStreak"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewWon"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentStreak_nr" />

    <TextView
        android:id="@+id/textView_played"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Played"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/textViewWon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayed_nr" />

    <TextView
        android:id="@+id/textViewGuessDistribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="GUESS DISTRIBUTION"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentStreak" />

    <TextView
        android:id="@+id/textViewBar_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGuessDistribution" />

    <TextView
        android:id="@+id/textViewBar_2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_1" />

    <TextView
        android:id="@+id/textViewBar_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_2" />

    <TextView
        android:id="@+id/textViewBar_4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_3" />

    <TextView
        android:id="@+id/textViewBar_5"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_4" />

    <TextView
        android:id="@+id/textViewBar_6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_5" />

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:onClick="onBtnClose_Clicked"
        android:text="CLOSE"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBar_6" />

    <ProgressBar
        android:id="@+id/progressBar_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_1"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_1"
        app:layout_constraintTop_toBottomOf="@+id/textViewGuessDistribution" />

    <ProgressBar
        android:id="@+id/progressBar_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_2"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_1" />

    <ProgressBar
        android:id="@+id/progressBar_3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_3"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_3"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_2" />

    <ProgressBar
        android:id="@+id/progressBar_4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_4"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_4"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_3" />

    <ProgressBar
        android:id="@+id/progressBar_5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_5"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_5"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_4"/>

    <ProgressBar
        android:id="@+id/progressBar_6"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/dark_gray"
        android:scaleY="2"
        app:layout_constraintEnd_toStartOf="@+id/textViewWins_6"
        app:layout_constraintStart_toEndOf="@+id/textViewBar_6"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_5" />

    <TextView
        android:id="@+id/textViewWins_1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_1"
        app:layout_constraintTop_toBottomOf="@+id/textViewGuessDistribution" />

    <TextView
        android:id="@+id/textViewWins_2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_1" />

    <TextView
        android:id="@+id/textViewWins_3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_3"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_2" />

    <TextView
        android:id="@+id/textViewWins_4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_4"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_3" />

    <TextView
        android:id="@+id/textViewWins_5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_5"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_4" />

    <TextView
        android:id="@+id/textViewWins_6"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/dark_gray"
        android:gravity="center_horizontal"
        android:text="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar_6"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_5" />


</androidx.constraintlayout.widget.ConstraintLayout>
